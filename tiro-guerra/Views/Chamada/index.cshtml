@using TiroGuerra.Models
@using System.Linq
@model List<Chamada>
@{
    ViewBag.Title = "Cadastro chamada";
    
}
<!doctype html>
<html lang="pt">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Chamada</title>
         <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    </head>
    <body>
        <h3>Chamada Online</h3>
        <div class="content">
        <div class="table-responsive-sm">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Número</th>
                        <th>Presença</th>
                    </tr>
                </thead>
                <tbody>
                <form action="/chamada/create" method="POST">
                
                @for(int i = 0; i < Model.Count;i++)
                {     
                    <tr> 
                    <td><input asp-for="@Model[i].IdAtirador" type="text" /></td>          
                    <td>@Model[i].Atirador.Nome</td>
                    <td>@Model[i].Atirador.Numero</td>
                    <td><td><input asp-for="@Model[i].Presenca" type="Checkbox" /></td>   </td>
                    </tr>
                       
                }
                    <button class="btn btn-primary">salvar</button>
                </form>   
                        
                        
                </tbody>
            </table>
            
        </div>
        </div>
    </body>
</html>