@using TiroGuerra.Models

@{
    ViewBag.Title = "Cadastro Atirador";
    ViewBag.css = "/css/search_instrutor.css";
    
}
    

    <div class="content">

        
        <section class="flex-row">
           <label class="title"> Instrutores</label>
        </section>

        <section class="flex-row">

            <div class="col-wd-100">
                <span class="data-title">Nome do Instrutor:</span> <input type="text" name="busca" class="search">
                <input class="btn-search" type="submit" value="Procurar" name="search">
            </div>

        </section>

        
            <section class="flex-row">
                <div class="col-wd-100-content">

                    <div class="linha-cabecalho">
                        <label class="subtitle" >Nome Completo:</label>
                        <label class="subtitle" id="presenca">Ações</label>    
                    </div>
                    

                    @foreach(var instrutor in ViewBag.instrutores)
                        {                
                            <div class="linha">
                            <label class="nomes-chamada">@instrutor.Nome</label>
                            <div class="botoes">
                                <a href="/instrutor/delete/@instrutor.Id" class="btn-excluir">Apagar</a>
                                <a href="/instrutor/update/@instrutor.Id" class="btn-editar">Editar</a>
                                
                            </div>
                            
                            </div>
                            
                    }



                    <section class="flex-row">
                <div class="col-wd-50">
                    <div class="caixa-botao">
                       <a href="/instrutor/create"> <button class="btn-novo">Novo Instrutor</button></a>
                    </div>
                </div>

            </section>
        
    </div>
